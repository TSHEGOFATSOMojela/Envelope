<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Envelope.HomePage"
             BackgroundColor="White"
             Title="City Of Ekurhuleni">


    <ScrollView>
        <StackLayout>
            <Image  Margin="20" VerticalOptions="Start" HeightRequest="220" WidthRequest="220"  Source="Ekurhulen.png"/>
            <Button x:Name="Tourist" 
                Text="Tourist"
                Clicked="TouristClicked"
                BackgroundColor="Gray"
                TextColor="White"
                MinimumWidthRequest="300"/>
            <Button x:Name="Settings" 
                Text="Settings"
                Clicked="SettingsClicked"
                BackgroundColor="Gray"
                TextColor="White"
                MinimumWidthRequest="300"/>
            <Button x:Name="ReportIt" 
                Text="ReportIt"
                Clicked="ReportItClicked"
                BackgroundColor="Gray"
                TextColor="White"
                MinimumWidthRequest="300"/>
        </StackLayout>
    </ScrollView>
</ContentPage>